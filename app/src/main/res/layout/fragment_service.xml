<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".ui.service.ServiceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notificationToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="@dimen/safe_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:text="Layanan"
            android:textColor="@color/textBlack"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <!--Fitur1-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/safe_margin"
            android:orientation="vertical">
            <!--Fitur Panggilan Darurat-->
            <ImageButton
                android:id="@+id/btCall"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:contentDescription="Select Layanan"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_call" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Panggilan Darurat"
                android:textAlignment="center"
                android:textSize="12sp" />
            <!--Fitur Meditasi-->
            <ImageButton
                android:id="@+id/btMeditasi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="35dp"
                android:background="@color/white"
                android:contentDescription="Select Meditasi"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_meditation" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Meditasi"
                android:textAlignment="center"
                android:textSize="12sp" />
        </LinearLayout>
        <!--Fitur2-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <!--Fitur Konseling-->
            <ImageButton
                android:id="@+id/btKonseling"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:contentDescription="Select Konseling"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_counseling" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Konseling"
                android:textAlignment="center"
                android:textSize="12sp" />
            <!--Fitur Catatan Kebaikan-->
            <ImageButton
                android:id="@+id/btCatatan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="35dp"
                android:background="@color/white"
                android:contentDescription="Select Catatan"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_note" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Catatan Kebaikan"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btMaps"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:contentDescription="Select Artikel"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_maps" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Layanan Terdekat"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>
        <!--Fitur End-->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>